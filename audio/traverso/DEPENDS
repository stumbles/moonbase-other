optional_depends lame       "-DWANT_MP3_ENCODE=1" "-DWANT_MP3_ENCODE=0" "for MP3 write support"
optional_depends slv2       "-DWANT_LV2=1"        "-DWANT_LV2=0"        "if you intend to use LV2-plugins"
